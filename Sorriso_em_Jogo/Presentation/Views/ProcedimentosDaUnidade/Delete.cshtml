@model Sorriso_em_Jogo.Application.ViewModels.ProcedimentosDaUnidadeViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir Procedimento da Unidade";
}

<h2>Excluir Procedimento da Unidade</h2>

<h3>Você tem certeza que deseja remover este procedimento da unidade?</h3>

<div class="form-group">
    <label>Unidade:</label>
    <p>@Model.UnidadeNome</p>
</div>
<div class="form-group">
    <label>Procedimento:</label>
    <p>@Model.ProcedimentoNome</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UnidadeId" />
    <input type="hidden" asp-for="ProcedimentoId" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "ProcedimentosDaUnidade")">Cancelar</a>
</form>
