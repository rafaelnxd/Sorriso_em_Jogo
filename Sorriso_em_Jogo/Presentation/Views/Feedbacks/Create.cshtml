@model Sorriso_em_Jogo.Application.ViewModels.FeedbackViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Adicionar Novo Feedback";
}

<h2>Adicionar Novo Feedback</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Data"></label>
        <input asp-for="Data" class="form-control" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comentario"></label>
        <textarea asp-for="Comentario" class="form-control"></textarea>
        <span asp-validation-for="Comentario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UsuarioId">Usuário</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="new SelectList(ViewBag.Usuarios, " Id_usuario", "Nome" )">
            <option value="">Selecione um Usuário</option>
        </select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Feedbacks")">Cancelar</a>
</form>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
