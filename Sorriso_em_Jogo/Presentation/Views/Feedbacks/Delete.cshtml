@model Sorriso_em_Jogo.Application.ViewModels.FeedbackViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir Feedback";
}

<h2>Excluir Feedback</h2>

<h3>Você tem certeza que deseja excluir este feedback?</h3>

<div class="form-group">
    <label>Data:</label>
    <p>@Model.Data.ToShortDateString()</p>
</div>
<div class="form-group">
    <label>Comentário:</label>
    <p>@Model.Comentario</p>
</div>
<div class="form-group">
    <label>Usuário:</label>
    <p>@Model.UsuarioNome</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id_feedback" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Feedbacks")">Cancelar</a>
</form>

@if (ViewData.ModelState.ErrorCount > 0)
{
        <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
                    <p>@error.ErrorMessage</p>
        }
        </div>
}
