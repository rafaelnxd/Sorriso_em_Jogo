@model Sorriso_em_Jogo.Application.ViewModels.RecompensaViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Recompensa";
}

<h2>Editar Recompensa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id_recompensa" />
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pontos_necessarios"></label>
        <input asp-for="Pontos_necessarios" class="form-control" />
        <span asp-validation-for="Pontos_necessarios" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Recompensas")">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
