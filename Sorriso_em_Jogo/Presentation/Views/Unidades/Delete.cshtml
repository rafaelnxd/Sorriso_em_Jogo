@model Sorriso_em_Jogo.Application.ViewModels.UnidadeViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir Unidade";
}

<h2>Excluir Unidade</h2>

<h3>Você tem certeza que deseja excluir esta unidade?</h3>

<div class="form-group">
    <label>Nome:</label>
    <p>@Model.Nome</p>
</div>
<div class="form-group">
    <label>Estado:</label>
    <p>@Model.Estado</p>
</div>
<div class="form-group">
    <label>Cidade:</label>
    <p>@Model.Cidade</p>
</div>
<div class="form-group">
    <label>Endereço:</label>
    <p>@Model.Endereco</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id_unidade" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Unidades")">Cancelar</a>
</form>
