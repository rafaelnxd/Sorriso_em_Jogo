@model Sorriso_em_Jogo.Application.ViewModels.UsuarioViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalhes do Usuário";
}

<h2>Detalhes do Usuário</h2>

<div class="form-group">
    <label>Nome:</label>
    <p>@Model.Nome</p>
</div>
<div class="form-group">
    <label>Email:</label>
    <p>@Model.Email</p>
</div>
<div class="form-group">
    <label>Data de Cadastro:</label>
    <p>@Model.Data_cadastro.ToShortDateString()</p>
</div>
<div class="form-group">
    <label>Pontos de Recompensa:</label>
    <p>@Model.Pontos_recompensa</p>
</div>

<p>
    <a class="btn btn-primary" href="@Url.Action("Edit", "Usuarios", new { id = Model.Id_usuario })">Editar</a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Usuarios")">Voltar para a Lista</a>
</p>
